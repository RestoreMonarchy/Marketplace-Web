@if (MarketItems != null)
{    
    <DataList Filters="FiltersData">
        <h2 class="text-center">Most Recent Listings</h2>
        <ul class="list-group">
            @foreach (var market in FiltersData.FilteredData)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <img src="/api/unturneditems/@market.ItemId/icon" style="width: 60px; height: 35px;">
                        <span class="font-weight-bold">@market.ItemName</span>
                    </div>
                    <div>
                        <span class="font-weight-bold">$@market.Price</span>
                        <button type="button" class="btn btn-primary" @onclick="() => OrderState.ShowPreviewModal(market)">
                            More Info
                        </button>
                    </div>
                </li>
            }
        </ul>
    </DataList>

    <PreviewModal IsBuy="true" Order="OrderState.Order" OnClickBuy="OrderState.BuyMarketItem" />
}
else
{
    <ProgressBar />
}