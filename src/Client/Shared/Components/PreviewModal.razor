<div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @if (Order != null)
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Order.UnturnedItem.ItemName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (Order.UnturnedItem.ItemType == EItemType.GUN)
                    {
                        <GunSummary GunId="Order.MarketItem.ItemId" Metadata="Order.MarketItem.Metadata" />
                    }
                    <h3>Listing Info</h3>
                    <ul class="list-unstyled">
                        <li><b>Seller:</b> @Order.MarketItem.SellerId</li>
                        <li><b>Price:</b> $@Order.MarketItem.Price</li>
                        <li><b>Quality:</b> @Order.MarketItem.Quality</li>

                        @if (Order.UnturnedItem.ItemType == EItemType.FUEL)
                        {
                            <li><b>Fuel:</b> @BitConverterExtras.GetUshort(Order.MarketItem.Metadata, 0)</li>
                        }
                        @if (Order.UnturnedItem.ItemType == EItemType.MAGAZINE)
                        {
                            <li><b>Magazine:</b> @Order.MarketItem.Amount/@Order.UnturnedItem.Amount</li>
                        }

                    </ul>
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @if (IsBuy)
                    {
                        <button type="button" @onclick="OnClickBuy.InvokeAsync" class="btn btn-primary">Buy for $@Order.MarketItem.Price</button>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public bool IsBuy { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public Order Order { get; set; }
    [Parameter]
    public EventCallback OnClickBuy { get; set; }
}
