@page "/trunk"
@attribute [Authorize]

@if (LayoutSetting != null)
{
    if (LayoutSetting == "Rushed")
    {
        <TrunkPageRushed />
    }
    else
    {
        <TrunkPageDefault />
    }
}
else
{
    <ProgressBar />
}

@code {
    [Inject]
    private SettingsService SettingsService { get; set; }

    public string LayoutSetting { get; set; }
    protected override async Task OnInitializedAsync()
    {
        LayoutSetting = await SettingsService.GetSettingValueAsync("TrunkLayout");
    }
} 