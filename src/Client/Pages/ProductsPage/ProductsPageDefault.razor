
@if (Products != null)
{
    <div class="row">
        <div class="col-9">
            <div class="card">
                <div class="card-header">
                    Products
                </div>
                <ul class="list-group">
                    @foreach (var product in Products)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @product.Title
                            <div>
                                <span class="mr-3">$@product.Price</span>
                                <button class="btn btn-primary" @onclick="async () => await PreviewModal.PreviewProductAsync(product)">More Info</button>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    Recent Payments
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var transaction in Transactions)
                    {
                        <li class="list-group-item">@transaction.PlayerName bought @transaction.Product.Title</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <ProductPreviewModal @ref="PreviewModal" OnProductBuyClicked="BuyProductAsync" />
}
else
{
    <ProgressBar />
}