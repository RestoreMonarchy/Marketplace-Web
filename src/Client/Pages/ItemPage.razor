@page "/items/{itemId}"

@if (UnturnedItem != null)
{
    <div class="row justify-content-center">
        <div class="col-lg-5 text-center">
            <img src="/api/unturneditems/@ItemId/icon" style="max-width: 400px;">
            <h2 class="font-weight-bold">@UnturnedItem.ItemName</h2>
            <p>@UnturnedItem.ItemDescription</p>
        </div>
        <div class="col-lg-7">            
            <PaginationList TData="MarketItem" DefaultPerPage="10" Data="UnturnedItem.MarketItems" @bind-PagedData="PagedData">                
                @if (PagedData != null)
                {
                    <ul class="list-group">
                        @foreach (var market in PagedData.OrderBy(x => x.Price))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @UnturnedItem.ItemName <b>$@market.Price</b>
                                <button type="button" class="btn btn-primary" @onclick="() => OrderState.ShowPreviewModal(market, UnturnedItem)">
                                    More Info
                                </button>
                            </li>
                        }
                    </ul>
                }
                @if (UnturnedItem.MarketItems.Count == 0)
                {
                    <h3 class="text-center">No listings</h3>
                }
            </PaginationList>
        </div>
    </div>

    <PreviewModal IsBuy="true" Order="OrderState.Order" OnClickBuy="OrderState.BuyMarketItem" />
} else
{
    <ProgressBar />
}
