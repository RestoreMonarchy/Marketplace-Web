<button class="btn btn-lg btn-primary" @onclick="ToggleModalAsync">Create New Server</button>

<div class="modal fade" id="@nameof(CreateServerModal)" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <EditForm Model="Server" OnValidSubmit="SubmitAsync">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Server</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <InputText @bind-Value="Server.ServerName" class="form-control" placeholder="#1 Restore Monarchy" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>IP</label>
                            <InputText @bind-Value="Server.ServerIP" class="form-control" placeholder="127.0.0.1" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>IP</label>
                            <InputNumber @bind-Value="Server.ServerPort" class="form-control" placeholder="27015" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="Server.Enabled" class="form-check-input" />
                            <label class="form-check-label">Enabled</label>
                        </div>
                    </div>
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create Server</button>
                </div>
            </EditForm>            
        </div>
    </div>
</div>

@code {
    [Inject]
    public IJSRuntime JsRuntime { get; set; }
    [Inject]
    public HttpClient HttpClient { get; set; }

    [Parameter]
    public EventCallback<Server> OnServerCreated { get; set; }

    public Server Server { get; set; } = new Server() { Enabled = true };

    public async Task ToggleModalAsync()
    {
        await JsRuntime.ToggleModalAsync(nameof(CreateServerModal));
    }

    public async Task SubmitAsync()
    {
        var server = await HttpClient.PostJsonAsync<Server>("api/servers", Server);
        await OnServerCreated.InvokeAsync(server);
        Server = new Server() { Enabled = true };
    }
}