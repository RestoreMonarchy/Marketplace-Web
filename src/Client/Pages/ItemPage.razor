@page "/items/{itemId}"

@if (Item != null)
{
    <div class="row justify-content-center">
        <div class="col-lg-5 text-center">
            <img src="/api/unturneditems/@ItemId/icon" style="max-width: 400px;">
            <h2 class="font-weight-bold">@Item.ItemName</h2>
            <p>@Item.ItemDescription</p>
        </div>
        <div class="col-lg-7">
            
            <PaginationList TData="MarketItem" DefaultPerPage="10" Data="Item.MarketItems" @bind-PagedData="PagedData">
                @if (PagedData != null)
                {
                    <ul class="list-group">
                        @foreach (var market in PagedData.OrderBy(x => x.Price))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @Item.ItemName <b>$@market.Price</b>
                                <button type="button" class="btn btn-primary" @onclick="() => PreviewListing(market)">
                                    More Info
                                </button>
                            </li>
                        }
                    </ul>
                }
                @if (Item.MarketItems.Count == 0)
                {
                    <h3 class="text-center">No listings</h3>
                }
            </PaginationList>
            
            
        </div>
    </div>

    <ItemInfoModal Listing="listing" OnClickBuy="BuyListing" IsBuy="true" />
} else
{
    <ProgressBar />
}
