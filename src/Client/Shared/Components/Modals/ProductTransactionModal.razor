<div class="modal fade" id="@nameof(ProductTransactionModal)" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @if (Model != null)
            {
                <div class="modal-header">
                    <h5 class="modal-title">Product Transaction #@Model.Id</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="list-unstyled">
                        <li><b>Transaction Id:</b> @Model.Id</li>
                        <li><b>Product Id:</b> @Model.Product.Id</li>
                        <li><b>Product Name:</b> @Model.ProductName</li>
                        <li><b>Server Id:</b> @Model.Server.Id</li>
                        <li><b>Server Name:</b> @Model.ServerName</li>
                        <li><b>Create Date:</b> @Model.CreateDate</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>


@code {
    [Inject]
    public IJSRuntime JsRuntime { get; set; }

    private ProductTransaction Model { get; set; }

    public async Task PreviewProductTransactionAsync(ProductTransaction productTransaction)
    {
        Model = productTransaction;
        StateHasChanged();
        await JsRuntime.ToggleModalAsync(nameof(ProductTransactionModal));
    }
}