@if (MarketItems != null)
{    
    <DataList TData="MarketItem" Filters="FiltersData">
        <ul class="list-group">
            @foreach (var market in FiltersData.FilteredData)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <img src="/api/unturneditems/@market.ItemId/icon" style="width: 60px; height: 35px;">
                        <span class="font-weight-bold">@market.ItemName</span>
                    </div>
                    <div>
                        <span class="font-weight-bold">$@market.Price</span>
                        <button type="button" class="btn btn-primary" @onclick="async () => await OrderState.ShowInfoModalAsync(market)">
                            More Info
                        </button>
                    </div>
                </li>
            }
        </ul>
    </DataList>

    <PreviewModal UnturnedItem="OrderState.InfoItem?.Item ?? null" MarketItem="OrderState.InfoItem" OnClickBuy="(m) => OrderState.BuyMarketItemAsync(m, FiltersData.RemoveFromOrigin)" />
}
else
{
    <ProgressBar />
}